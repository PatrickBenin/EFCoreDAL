@model IEnumerable<EFCoreDAL.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.DeptId  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.DeptId },new{onclick="return confirm('Are you sure to delete?')" })
            </td>
        </tr>
}
    </tbody>
</table>
